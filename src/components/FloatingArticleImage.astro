---
import { Image } from "astro:assets";

interface Props {
    imageSrc: ImageMetadata;
    imageAlt: string;
    width?: number;
    height?: number;
}

const { imageSrc, imageAlt, width = 330, height = 330 } = Astro.props;
---

<Image
    src={imageSrc}
    alt={imageAlt}
    width={width}
    height={height}
    class="floating-article-image"
/>

<style>
    .floating-article-image {
        float: right;
        margin-left: 1rem;
        margin-bottom: 1rem;
        max-width: 100%;
        height: auto;
    }
    @media (max-width: 768px) {
        .floating-article-image {
            float: none;
            margin: 1rem auto;
            display: block;
        }
    }
</style>
